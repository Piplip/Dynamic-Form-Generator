{
  "meta": {
    "name": "My Form",
    "version": "1.0.0"
  },
  "fields": [
    {
      "name": "firstName",
      "label": "First Name",
      "type": "text",
      "required": true
    },
    {
      "name": "lastName",
      "label": "Last Name",
      "type": "text",
      "required": true
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "required": true
    },
    {
      "name": "age",
      "label": "Age",
      "type": "number",
      "min": 18,
      "max": 99
    },
    {
      "name": "gender",
      "label": "Gender",
      "type": "select",
      "options": [
        {
          "label": "Male",
          "value": "male"
        },
        {
          "label": "Female",
          "value": "female"
        }
      ]
    },
    {
      "name": "subscribe",
      "label": "Subscribe to our newsletter",
      "type": "checkbox"
    }
  ]
}
