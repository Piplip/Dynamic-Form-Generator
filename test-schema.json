{
  "title": "Login Form",
  "fields": [
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "validation": {
        "required": true,
        "requiredError": "Email is required",
        "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$",
        "patternError": "Invalid email address"
      },
      "inputLayout": {
        "fullWidth": true,
        "variant": "outlined"
      }
    },
    {
      "name": "password",
      "label": "Password",
      "type": "text",
      "validation": {
        "required": true,
        "requiredError": "Password is required",
        "minLength": 6,
        "minLengthError": "Password must be at least 6 characters"
      },
      "inputLayout": {
        "fullWidth": true,
        "variant": "outlined"
      }
    },
    {
      "name": "submit",
      "label": "Login",
      "type": "button",
      "buttonType": "submit",
      "buttonLayout": {
        "fullWidth": true,
        "variant": "primary"
      }
    }
  ],
  "layout": {
    "type": "grid",
    "columns": 1,
    "spacing": 2
  }
}